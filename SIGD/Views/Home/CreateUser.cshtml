<div class="row mt-4">
    <div class="col-md-4">
        <h4>Criar usuário para escola.</h4>
        <div class="form-group m-2">
            <label class="m-2">Nome de usuário</label>
            <input type="text" class="form-control" id="InputUsernameRegisterSchool" placeholder="Digite o nome de usuário para o diretor" name="user" required>
        </div>
        <div class="form-group m-2">
            <label class="m-2">Email</label>
            <input type="text" class="form-control" id="InputEmailRegisterSchool" placeholder="Digite o email do diretor" name="email" required>
        </div>
        <button id="RegisterSubmitSchool" class="btn btn-primary m-2">Cadastrar</button>
        <div id="errorRegisterMessageSchool" class="mt-2 mb-2" hidden>
            <span class="alert-danger">Precisa preencher todos os campos.</span>
        </div>
    </div>
</div>