@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <main role="main" class="pb-3">

        <h1>Register</h1>

        <div class="row">
            <div class="col-md-4">
                <h4>Create a new account.</h4>
                <hr>
                <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>
                <div class="form-group m-2">
                    <label class="m-2">Nome de usuário</label>
                    <input type="text" class="form-control" id="InputUser" placeholder="Digite o nome de usuário" name="user" required>
                    <div style="margin-top: 7px;" id="CheckUser"></div>
                </div>
                <div class="form-group m-2">
                    <label class="m-2">Nome de usuário</label>
                    <input type="text" class="form-control" id="InputEmail" placeholder="Digite o email" name="email" required>
                    <div style="margin-top: 7px;" id="CheckUser"></div>
                </div>
                <button id="RegisterSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </main>
</div>