<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="modalFile" class="modal-body">
            </div>
            <div id="modalFileFooter" class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>                
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModalMessageLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalQALongTitle">Enviar Pergunta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Titulo:</label>
                        <input id="inputMessageTitle" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Messagem:</label>
                        <textarea id="inputMessage" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div id="modalQAFooter" class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<button type="button" id="modalButton" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" hidden>
    Launch demo modal
</button>

<button type="button" id="modalMessageButton" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalMessageLong" hidden>
    Launch demo modal
</button>