<div class="mt-4">
    <div class="row ml-4">
        <h4 class="col-12 mb-4">Criar usuário para escola.</h4>
        <div class="form-group row">
            <div class="m-2">
                <label class="m-2">Nome de usuário</label>
                <input type="text" class="form-control" id="InputUsernameRegisterSchool" placeholder="Digite o nome de usuário para o diretor" name="user" required>
            </div>
            <div class="m-2">
                <label class="m-2">Email</label>
                <input type="text" class="form-control" id="InputEmailRegisterSchool" placeholder="Digite o email do diretor" name="email" required>
            </div>
            <button id="registerSubmitSchool" class="btn btn-primary ml-0 mt-5 mb-5">Cadastrar</button>
            <div id="errorRegisterMessageSchool" class="mt-2 mb-2" hidden>
                <span class="alert-danger">Precisa preencher todos os campos.</span>
            </div>
        </div>
    </div>
    <div class="row">
        <table id="usersManagedTable" class="display table-striped table-bordered cell-border hover">
            <thead>
                <tr>
                    <th class="ml-3">Nome de usuário</th>
                    <th class="ml-3">Email</th>
                    <th class="ml-3">Status conta</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="margin-left-table">Nome de usuário</th>
                    <th class="margin-left-table">Email</th>
                    <th class="margin-left-table">Status conta</th>
                </tr>
            </tbody>
        </table>
    </div>
</div>