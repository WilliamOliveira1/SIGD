@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
                <button type="submit" id="logoutButton" class="nav-link btn btn-link text-dark">Logout</button>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark text-right" id="registerPath"  asp-controller="Register" asp-action="Register">Cadastrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="loginPath" asp-controller="Login" asp-action="LoginPage">Acessar</a>
        </li>
    }
</ul>
